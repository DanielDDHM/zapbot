{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",  // Use 'CommonJS' se não estiver utilizando ESM. Mude para 'ESNext' se estiver usando ESM.
    "rootDir": "./src",    // Diretório de entrada do TypeScript
    "outDir": "./dist",    // Diretório de saída dos arquivos compilados
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
